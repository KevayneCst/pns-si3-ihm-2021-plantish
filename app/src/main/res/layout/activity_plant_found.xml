<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.polytech.si3.ihm.plantish.identify.activities_identification.PlantFoundActivity">

    <TextView
        android:id="@+id/plantFoundLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Identifier votre plante"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/plantFoundPicture"
        android:layout_width="315dp"
        android:layout_height="307dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantFoundLabel"
        tools:srcCompat="@tools:sample/avatars" />


    <Button
        android:id="@+id/savePlantButton"
        android:layout_width="221dp"
        android:layout_height="67dp"
        android:layout_marginTop="47dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Sauvgarder la plante"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/menuButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantFoundPicture" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="221dp"
        android:layout_height="67dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Retour au menu principal"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/savePlantButton" />


</androidx.constraintlayout.widget.ConstraintLayout>