<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.polytech.si3.ihm.plantish.identify.activities_identification.PlantNotFoundActivity">


    <TextView
        android:id="@+id/sorry"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Désolé votre recherche n'a pas abouti. Vous serez notifier dès que notre base de données sera mise à jour."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/askCommunityButton"
        android:layout_width="221dp"
        android:layout_height="67dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Demander à la communauté"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/homeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sorry"
        app:layout_constraintVertical_bias="0.59" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="221dp"
        android:layout_height="67dp"
        android:layout_marginBottom="144dp"
        android:text="Retour au menu principal"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@android:color/holo_blue_dark"/>
</androidx.constraintlayout.widget.ConstraintLayout>